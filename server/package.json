{
  "name": "sponsorenlauf-server",
  "private": true,
  "version": "0.0.0",
  "main": "src/main.ts",
  "scripts": {
    "setup:database": "prisma2 migrate save --name 'init' --experimental",
    "setup:database-up": "prisma2 migrate up --experimental",
    "setup:prisma-client": "prisma2 generate",
    "setup:initial-data": "ts-node prisma/fake-data.ts",
    "clean": "rm -rf dist",
    "build": "npm-run-all --sequential clean generate && tsc",
    "style": "prettier --write 'src/**/*'",
    "dev": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only src/main.ts",
    "generate": "npm-run-all --sequential setup:prisma-client generate:nexus",
    "generate:nexus": "ts-node-dev --transpile-only src/schema",
    "studio": "prisma2 studio --experimental",
    "start": "npm-run-all --sequential generate"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-preview022",
    "@types/bcrypt": "10.0.28-alpha",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/ws": "^7.2.2",
    "apollo-server": "^2.10.1",
    "apollo-server-express": "^2.10.1",
    "bcrypt": "^4.0.1",
    "bcryptjs": "^2.4.3",
    "csv-parse": "^4.8.7",
    "csv-parser": "^2.3.2",
    "graphql": "^14.6.0",
    "graphql-middleware": "^2.0.0",
    "graphql-shield": "^7.0.14",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.12.0-rc.13",
    "nexus-prisma": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@types/faker": "^4.1.10",
    "faker": "^4.1.0",
    "prettier": "^1.19.1",
    "prisma2": "2.0.0-preview022",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
