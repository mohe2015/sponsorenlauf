generator prisma_client {
  provider = "prisma-client-js"
}

datasource postgresql {
  provider = "postgresql"
  url = "***"
}

model User {
  id              String        @id
  name            String        @unique
  hashedPassword  String
  role            UserRole
  createdRounds   Round[]
  currentSessions UserSession[]
}

model Runner {
  id          String  @id
  startNumber Int     @default(autoincrement()) @unique
  name        String  @unique
  clazz       String
  grade       Int
  rounds      Round[]
}

model Round {
  id          String   @id
  studentId   String
  createdById String
  time        DateTime @default(now())
  createdBy   User     @relation(fields: [createdById], references: [id])
  student     Runner   @relation(fields: [studentId], references: [id])
}

model UserSession {
  id         String   @id
  userId     String
  validUntil DateTime
  user       User     @relation(fields: [userId], references: [id])
}

enum UserRole {
  ADMIN
  TEACHER
  VIEWER
}
