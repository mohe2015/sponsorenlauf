datasource db {
  provider = "sqlite"
  url = "***"
}

generator photon {
  provider = "photonjs"
}

model User {
  id            String   @default(cuid()) @id
  name          String   @unique
  password      String
  role          UserRole
  createdRounds Round[]
}

enum UserRole {
  ADMIN
  TEACHER
  VIEWER
}

model Student {
  id          String  @default(cuid()) @id
  startNumber Int     @default(autoincrement())
  name        String  @unique
  class       String
  grade       Int
  rounds      Round[]
}

model Round {
  id        String   @default(cuid()) @id
  student   Student
  createdBy User
  time      Int
}
