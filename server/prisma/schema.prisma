datasource postgresql {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// postgresql://postgres:postgres@localhost:5432/myapp
// docker run --detach --publish 5432:5432 -e POSTGRES_PASSWORD=postgres --name postgres postgres:10.12

generator prisma_client {
  provider = "prisma-client-js"
}

enum UserRole {
  ADMIN
  TEACHER
  VIEWER
}

model User {
  identifier      Int           @id @default(autoincrement())
  name            String        @unique
  hashedPassword  String
  role            UserRole
  createdRounds   Round[]
  currentSessions UserSession[]
}

model Runner {
  identifier  Int     @id @default(autoincrement())
  name        String  @unique
  // maybe also password so they can login
  // then they may be like a user
  clazz       String
  grade       Int
  rounds      Round[]
}

model Round {
  identifier  Int      @id @default(autoincrement())
  studentId   Int
  createdById Int
  time        DateTime @default(now())
  createdBy   User     @relation(fields: [createdById], references: [identifier])
  student     Runner   @relation(fields: [studentId], references: [identifier])
}

model UserSession {
  id         String   @id
  userId     Int
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [identifier])
}

enum UserRole {
  ADMIN
  TEACHER
  VIEWER
}
