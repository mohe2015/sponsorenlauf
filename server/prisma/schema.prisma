datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator prisma_client {
  provider = "prisma-client-js"
}

model User {
  id            String   @default(cuid()) @id
  name          String   @unique
  password      String
  role          UserRole
  createdRounds Round[]
}

enum UserRole {
  ADMIN
  TEACHER
  VIEWER
}

model Student {
  id          String @default(cuid()) @id
  startNumber Int    @unique // @default(autoincrement()) // https://github.com/prisma/prisma2/issues/1938 https://github.com/graphql-nexus/nexus-plugin-prisma https://github.com/prisma/prisma2 has a bug autoincrement makes this the primary key
  name        String @unique
  class       String
  grade       Int
  rounds      Round[]
}

model Round {
  id        String   @default(cuid()) @id
  student   Student
  createdBy User
  time      Int
}